{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "/opt/nodejs/products-layer": [
        "lambda/products/layers/products-layer/nodejs/product-repository",
      ],
      "/opt/nodejs/orders-layer": [
        "lambda/orders/layers/orders-layer/nodejs/order-repository",
      ],
      "/opt/nodejs/orders-events-repository-layer": [
        "lambda/orders/layers/orders-events-repository-layer/nodejs/order-event-repository",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
